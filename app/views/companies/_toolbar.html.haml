.btn-toolbar.pull-right
  .btn-group
    - if can_edit?
      %a.btn.btn-medium.add{:href => new_company_drink_path(@company)}
        %i.icon-plus-sign
        Add drink
    %a.btn.btn-medium.print{:href => "javascript:window.print()"}
      %i.icon-print
      Print spec
    %a.btn.btn-medium.share{:href => token_url(:token => @company.view_token)}
      %i.icon-share
      Share URL
    %a.btn.btn-medium.share.edit{:href => token_url(:token => @company.edit_token)}
      %i.icon-edit
      Share Edit URL